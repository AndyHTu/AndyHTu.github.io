<body>
  <div class="wrap">
    <nav class="nav">
      <div class="brand"><div class="logo"></div><div class="name">Andy Tu</div></div>
      <div class="cta">
        <a class="btn" href="/" rel="home">Home</a>
        <a class="btn" href="https://github.com/" target="_blank" rel="noreferrer">GitHub</a>
        <a class="btn" href="mailto:hello@andyhtu.com">Contact</a>
      </div>
    </nav>

    <section class="hero">
      <div>
        <h1>AI Work — Films, Influencers, Creative Tech</h1>
        <p>Selected experiments and projects across AI film pipelines, influencer systems, and creative advertising. Short, visual, and to the point.</p>
        <div class="filters" id="filters"></div>
      </div>
      <div class="panel">
        <strong>How to use</strong>
        <ol style="margin:8px 0 0; padding-left:18px; color:var(--muted)">
          <li>Click any card to view media and details.</li>
          <li>Use filter chips to narrow by category.</li>
          <li>Open the ↗ link for external demos (YouTube, GitHub, etc.).</li>
        </ol>
      </div>
    </section>

    <section class="grid" id="grid"></section>
  </div>

  <dialog id="lightbox">
    <div class="lb-media" id="lbMedia"></div>
    <div class="lb-body">
      <div class="lb-title" id="lbTitle"></div>
      <div class="lb-desc" id="lbDesc"></div>
      <div class="lb-actions" id="lbActions"></div>
    </div>
  </dialog>

  <script>
    // === Minimal data-driven portfolio ===
    // Replace these with your real items. Media can be image or MP4 (self-hosted or CDN).
    // For YouTube, set media="youtube" and provide youtubeId.
    const ITEMS = [
      {
        title: "Asami — AI Singer Reel",
        tags: ["AI Influencer","Music","Shorts"],
        poster: "https://images.unsplash.com/photo-1542751371-adc38448a05e?q=80&w=1200&auto=format&fit=crop", // placeholder
        media: "image", // image | video | youtube
        src: "https://images.unsplash.com/photo-1542751371-adc38448a05e?q=80&w=1200&auto=format&fit=crop",
        desc: "A quick reel demonstrating the Asami character: voice sync tests, motion loops, and UGC-style camera framing.",
        links: [{label:"GitHub", href:"https://github.com/"},{label:"Demo", href:"#"}]
      },
      {
        title: "AI Film Pipeline — Test 02",
        tags: ["AI Film","Workflow","Storyboard"],
        poster: "https://images.unsplash.com/photo-1485846234645-a62644f84728?q=80&w=1200&auto=format&fit=crop",
        media: "video",
        src: "https://upload.wikimedia.org/wikipedia/commons/transcoded/7/77/Big_Buck_Bunny_full_movie.ogv/Big_Buck_Bunny_full_movie.ogv.240p.ogv",
        desc: "End-to-end test: prompt → animation → compositing. Notes on start/end-frame continuity and texture carry-over.",
        links: [{label:"Process Notes", href:"#"}]
      },
      {
        title: "Influencer Network — Auto Cutdowns",
        tags: ["Automation","Growth","AI Influencer"],
        poster: "https://images.unsplash.com/photo-1518779578993-ec3579fee39f?q=80&w=1200&auto=format&fit=crop",
        media: "image",
        src: "https://images.unsplash.com/photo-1518779578993-ec3579fee39f?q=80&w=1200&auto=format&fit=crop",
        desc: "Agent-driven cutdowns for Shorts/Reels: beat-detect, caption pass, and safe-crop for faces/logos.",
        links: [{label:"GitHub", href:"https://github.com/"}]
      },
      {
        title: "City of Dolls — Character Loop",
        tags: ["AI Film","Character","Loop"],
        poster: "https://images.unsplash.com/photo-1531297484001-80022131f5a1?q=80&w=1200&auto=format&fit=crop",
        media: "image",
        src: "https://images.unsplash.com/photo-1531297484001-80022131f5a1?q=80&w=1200&auto=format&fit=crop",
        desc: "Motion loop test with handheld jitter and VHS texture. 10s seamless loop for social.",
        links: [{label:"YouTube", href:"#"}]
      }
    ];

    // Build filter list from tags
    const ALL_TAGS = Array.from(new Set(ITEMS.flatMap(i=>i.tags))).sort();
    const active = new Set();

    const $ = (id)=>document.getElementById(id);
    const filtersRoot = $("filters");
    const gridRoot = $("grid");
    const dialog = $("lightbox");
    const lbMedia = $("lbMedia");
    const lbTitle = $("lbTitle");
    const lbDesc = $("lbDesc");
    const lbActions = $("lbActions");

    function renderFilters(){
      const chips = [`<button class="chip" data-tag="__all" aria-pressed="${active.size?"false":"true"}">All</button>`]
        .concat(ALL_TAGS.map(t=>`<button class="chip" data-tag="${t}" aria-pressed="${active.has(t)}">${t}</button>`));
      filtersRoot.innerHTML = chips.join("");
      filtersRoot.querySelectorAll('.chip').forEach(btn=>{
        btn.addEventListener('click',()=>{
          const tag = btn.dataset.tag;
          if(tag==='__all'){ active.clear(); } else { if(active.has(tag)) active.delete(tag); else active.add(tag); }
          renderFilters();
          renderGrid();
        });
      });
    }

    function matchActive(item){
      if(active.size===0) return true;
      return item.tags.some(t=>active.has(t));
    }

    function cardHTML(item, idx){
      return `
        <article class="card" data-idx="${idx}">
          <a class="launch" href="${(item.links?.[0]?.href)||'#'}" ${item.links?.[0]?.href? 'target="_blank" rel="noreferrer"':''}>↗</a>
          <img class="thumb" loading="lazy" alt="${item.title}" src="${item.poster}" />
          <div class="body">
            <h3 class="title">${item.title}</h3>
            <div class="meta">${item.tags.map(t=>`<span class="tag">${t}</span>`).join('')}</div>
          </div>
        </article>`;
    }

    function renderGrid(){
      const list = ITEMS.filter(matchActive);
      gridRoot.innerHTML = list.map((it, i)=> cardHTML(it, i)).join('');
      gridRoot.querySelectorAll('.card').forEach(card=>{
        card.addEventListener('click', (e)=>{
          // Avoid opening lightbox if ↗ link clicked
          if(e.target.closest('.launch')) return;
          const idx = Number(card.dataset.idx);
          openLightbox(ITEMS.filter(matchActive)[idx]);
        });
      });
    }

    function openLightbox(item){
      lbMedia.innerHTML = '';
      if(item.media==='video'){
        const v = document.createElement('video');
        v.src = item.src; v.controls = true; v.playsInline = true; lbMedia.appendChild(v);
      } else if(item.media==='youtube'){
        const iframe = document.createElement('iframe');
        iframe.width='100%'; iframe.height='100%'; iframe.allow='autoplay; encrypted-media'; iframe.allowFullscreen = true;
        iframe.src = `https://www.youtube.com/embed/${item.youtubeId}?rel=0`;
        lbMedia.appendChild(iframe);
      } else { // image
        const img = document.createElement('img'); img.src = item.src; img.alt = item.title; lbMedia.appendChild(img);
      }
      lbTitle.textContent = item.title;
      lbDesc.textContent = item.desc || '';
      lbActions.innerHTML = (item.links||[]).map(l=>`<a class="btn" href="${l.href}" target="_blank" rel="noreferrer">${l.label}</a>`).join('');

      dialog.showModal();
    }

    // Close modal on backdrop click or ESC
    dialog.addEventListener('click', (e)=>{ if(e.target === dialog) dialog.close(); });
    window.addEventListener('keydown', (e)=>{ if(e.key==='Escape' && dialog.open) dialog.close(); });

    renderFilters();
    renderGrid();
  </script>
</body>
</html>
