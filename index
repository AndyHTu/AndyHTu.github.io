  <style>
    :root{
      --bg:#0b0c10; --panel:#0f1117; --ink:#e8e8f0; --muted:#98a2b3; --brand:#7aa2ff; --line:#1a1f2e; --chip:#161a24;
      --glow:0 0 0 1px var(--line), 0 10px 30px rgba(0,0,0,.45);
    }
    *{box-sizing:border-box}
    html,body{height:100%}
    body{margin:0;background:radial-gradient(1200px 800px at 10% -10%, rgba(122,162,255,.08), transparent 60%), radial-gradient(900px 700px at 110% 0%, rgba(255,122,201,.08), transparent 60%), var(--bg); color:var(--ink); font:500 16px/1.6 system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial}
    a{color:inherit;text-decoration:none}
    .wrap{max-width:1200px;margin:0 auto;padding:28px}

    /* Header */
    .nav{display:flex;justify-content:space-between;align-items:center;gap:16px}
    .brand{display:flex;align-items:center;gap:10px}
    .logo{width:36px;height:36px;border-radius:10px;background:linear-gradient(135deg,var(--brand),#ff7ac9);box-shadow:0 8px 24px rgba(122,162,255,.35)}
    .name{font-weight:800;letter-spacing:.3px}
    .cta{display:flex;gap:10px}
    .btn{padding:10px 14px;border:1px solid var(--line);border-radius:12px;background:linear-gradient(180deg,var(--panel),#0c0e14);box-shadow:var(--glow);color:var(--ink)}
    .btn:hover{border-color:#2b3145}

    /* Hero */
    .hero{display:grid;grid-template-columns:1.2fr .8fr;gap:24px;align-items:center;margin:28px 0}
    .hero h1{font-size:40px;line-height:1.1;margin:0}
    .hero p{color:var(--muted);margin:10px 0 0}
    .hero .panel{padding:18px;border:1px solid var(--line);border-radius:16px;background:linear-gradient(180deg,var(--panel),#0c0e14);box-shadow:var(--glow)}
    @media (max-width:900px){.hero{grid-template-columns:1fr}}

    /* Filters */
    .filters{display:flex;flex-wrap:wrap;gap:10px;margin:18px 0}
    .chip{padding:8px 12px;border:1px solid var(--line);border-radius:999px;background:var(--chip);color:var(--muted);cursor:pointer}
    .chip[aria-pressed="true"]{background:#192038;color:var(--ink);border-color:#2b3145}

    /* Gallery */
    .grid{display:grid;grid-template-columns:repeat(1,minmax(0,1fr));gap:14px}
    @media (min-width:700px){.grid{grid-template-columns:repeat(2,minmax(0,1fr))}}
    @media (min-width:1040px){.grid{grid-template-columns:repeat(3,minmax(0,1fr))}}
    .card{position:relative;overflow:hidden;border:1px solid var(--line);border-radius:16px;background:linear-gradient(180deg,var(--panel),#0c0e14);box-shadow:var(--glow)}
    .thumb{aspect-ratio:16/9;background:#0c0f16;display:block;width:100%;object-fit:cover}
    .card .body{padding:12px 14px}
    .title{font-weight:700;font-size:16px;margin:0}
    .meta{color:var(--muted);font-size:13px;margin-top:6px;display:flex;gap:8px;flex-wrap:wrap}
    .tag{border:1px solid var(--line);padding:2px 8px;border-radius:999px}
    .launch{position:absolute;right:10px;top:10px;background:#0b0e16ad;border:1px solid var(--line);padding:6px 10px;border-radius:10px;font-size:12px}
    .launch:hover{border-color:#2b3145}

    /* Lightbox */
    dialog{max-width:min(1080px,90vw);width:100%;border:1px solid var(--line);border-radius:16px;background:linear-gradient(180deg,var(--panel),#0c0e14);color:var(--ink);padding:0;box-shadow:0 20px 80px rgba(0,0,0,.6)}
    dialog::backdrop{background:rgba(0,0,0,.6)}
    .lb-media{width:100%;aspect-ratio:16/9;background:#0c0f16;display:flex;align-items:center;justify-content:center}
    .lb-media img,.lb-media video{width:100%;height:100%;object-fit:cover}
    .lb-body{padding:16px;border-top:1px solid var(--line)}
    .lb-title{font-weight:800}
    .lb-desc{color:var(--muted);margin-top:6px}
    .lb-actions{display:flex;gap:10px;margin-top:12px}
  </style>
